{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": ".",
    "skipLibCheck": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": false,
    "declaration": true,
    "stripInternal": true,
    "lib": ["es2016", "dom"],
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "include": ["src"]
}
